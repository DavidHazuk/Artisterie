<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Artisterie | {% block title %}{% endblock %}</title>

		<!-- Font Awesome -->
		<link rel="stylesheet" href="{{ asset('/css/font-awesome.min.css') }}">

		<!-- CSS Bootstrap -->
		<link rel="stylesheet" href="{{ asset('/css/bootstrap.min.css') }}" crossorigin="anonymous">

		<!-- Favicon -->
		<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('/img/apple-touch-icon.png') }}">
		<link rel="icon" type="image/png" sizes="32x32" href="{{ asset('/img/favicon-32x32.png') }}">
		<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('/img/favicon-16x16.png') }}">
		<link rel="manifest" href="{{ asset('/img/site.webmanifest') }}">
		<link rel="mask-icon" href="{{ asset('/img/safari-pinned-tab.svg') }}" color="#1dc918">
		<meta name="msapplication-TileColor" content="#202020">
		<meta name="theme-color" content="#202020">

		<!-- Cropper -->
		<link rel="stylesheet" href="{{ asset('/css/cropper.min.css') }}" />

		{% if memberMenu is defined %}
			<!-- FullCalendar -->
			<link rel='stylesheet' href="{{ asset('/css/fullcalendar.css') }}" />
		{% endif %}

		{#{% if artistsMenu is defined %}#}
			<!-- Fancybox CSS -->
			<link rel="stylesheet" type="text/css" href="{{ asset('css/jquery.fancybox.min.css') }}">		
		{#{% endif %}#}
		
		<!-- Mon CSS -->
		<link rel="stylesheet" href="{{ asset('/css/artisterie.css') }}" >
	</head>
	<body>

		{{ include('menu.html.twig') }}

		{% block content %}{% endblock %}

		{{ include('footer.html.twig') }}

		<!-- SCRIPTS JAVASCRIPT -->
		<!-- jQuery -->
		<script src="{{ asset('/js/jquery-3.3.1.min.js') }}" crossorigin="anonymous"></script>
		<!-- JavaScript Boostrap et Popper -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="{{ asset('/js/bootstrap.min.js') }}" crossorigin="anonymous"></script>

		<!-- Paroller -->
		<script src="{{ asset('/js/jquery.paroller.min.js') }}"></script>

		<!-- Cropper -->
		<script src="{{ asset('/js/cropper.min.js') }}"></script>


		{#{% if artistsMenu is defined %}#}
			<!-- Fancybox -->
			<script src="{{ asset('/js/jquery.fancybox.min.js') }}"></script>
		{#{% endif %}#}
		{% if contactMenu is defined %}
			<!-- Google Maps -->
			<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAlPEbrouPSY0CLRmMv0w-zb3IyrFp853s&callback=initMap"></script>
			<!-- Mon JavaScript -->
			<script src="{{ asset('/js/script_contact.js') }}"></script>
		{% endif %}
		{% if memberMenu is defined %}
			<!-- FullCalendar -->
			<script src="{{ asset('/js/fullcalendar/moment.min.js') }}"></script>
			<script src="{{ asset('/js/fullcalendar/fullcalendar.js') }}"></script>
			<script src="{{ asset('/js/fullcalendar/fr.js') }}"></script>
			<!-- Colorpicker -->
			<script src="{{ asset('/js/jqColorPicker.min.js') }}"></script>
			<!-- Mon JavaScript -->
			<script src="{{ asset('/js/script_membres.js') }}"></script>
		{% endif %}
		<!-- Mon JavaScript -->
		<script src="{{ asset('/js/script.js') }}"></script>
	</body>
</html>
