{% block content %}
						<div class="modal-header">
							{% if mode=="ajout" %}
							<h4 id="modalTitle" class="modal-title">Ajout d'un évènement</h4>
							{% else %}
							<h4 id="modalTitle" class="modal-title">Modification d'un évènement</h4>
							{% endif %}
							<button id="btnClose" type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">close</span></button>
						</div>
						<div id="modalBody" class="modal-body">
							{% for flashMessage in app.session.flashbag.get('errorEvent') %}
								<div class="alert alert-danger">
									{{ flashMessage }}
								</div>
							{% endfor %}
							{{ form_errors(eventForm) }}
							{{ form_start(eventForm, {'attr': {'id':'formEvent','class': 'col-12'}} ) }}
							<fieldset class="col-12 d-flex flex-wrap">
									<div class="form-row">
										<div class="form-group col-12">
											{{ form_label(eventForm.title)}}
											{{ form_widget(eventForm.title, {'attr': {'class': 'form-control'}})}}
											{{ form_errors(eventForm.title) }}
										</div>
									</div>
									<div class="form-row">
										<div>{{ form_widget(eventForm.day)}}</div>
										<div class="form-group col-12 col-md-6">
											{{ form_label(eventForm.startHour)}}
											{{ form_widget(eventForm.startHour, {'attr': {'class': 'form-control'}})}}
											{{ form_errors(eventForm.startHour) }}
										</div>
										<div class="form-group col-12 col-md-6">
											{{ form_label(eventForm.endHour)}}
											{{ form_widget(eventForm.endHour, {'attr': {'class': 'form-control'}})}}
											{{ form_errors(eventForm.endHour) }}
										</div>
									</div>
								</fieldset>
								<div class="d-flex justify-content-center">
								{{ form_widget(eventForm.valid)}}
								{% if mode=="modification" %}
									<a href="{{ path('admin_event_delete', { 'id': eventId }) }}" class="btn btn-danger ml-2">Supprimer</a>
								{% endif %}
								</div>
							{{ form_end(eventForm) }}
						</div>
{% endblock %}
